alias c=clear
alias h=history
alias ls='ls -GH'
alias l='ls -l'
alias src='source ~/.bash_profile '
alias tm='tmuxinator'
alias mx='tmuxinator'
alias tkall='tmux kill-server'
alias tls='tmux ls'
# use the brew installed ctags
alias ctags='/usr/local/bin/ctags'
# build tags for ruby, exclude git, include dependencies
alias ctagsra='ctags -R --languages=ruby --exclude=.git . $(bundle list --paths)'
# ask for git password for start of a session
alias sad='ssh-add ~/.ssh/id_rsa'

# git aliases start
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias g='git checkout '
alias glog='git hist'
